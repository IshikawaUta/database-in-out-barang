{
  "version": 2,
  "builds": [
    {
      "src": "wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12.3" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "wsgi.py"
    }
  ],
  "env": {
    "MONGO_URI": "@inventory_app_mongo_uri",
    "DATABASE_NAME": "@inventory_app_database_name",
    "SECRET_KEY": "@inventory_app_secret_key",
    "ADMIN_USERNAME": "@inventory_app_admin_username",
    "ADMIN_PASSWORD": "@inventory_app_admin_password"
  }
}