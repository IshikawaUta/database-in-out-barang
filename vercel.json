{
  "version": 2,
  "builds": [
    {
      "src": "wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12.3" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "wsgi.py"
    }
  ],
  "env": {
    "MONGO_URI": "@MONGO_URI",
    "DATABASE_NAME": "@DATABASE_NAME",
    "SECRET_KEY": "@SECRET_KEY",
    "ADMIN_USERNAME": "@ADMIN_USERNAME",
    "ADMIN_PASSWORD": "@ADMIN_PASSWORD"
  }
}